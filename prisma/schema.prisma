generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  blogId String @id @default(uuid())
  title String
  content String
  imageUrl String
  authorId String
  authorName String
  autorImage String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}